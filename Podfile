use_frameworks!

target 'SlackKit macOS' do
	platform :osx, '10.11'
	pod 'SKCore'
	pod 'SKClient'
	pod 'SKWebAPI'
	pod 'SKRTMAPI', :git => 'https://github.com/IntrepidPursuits/SKRTMAPI', :branch => 'cprime/reconnect'
	pod 'SKServer'
end

target 'SlackKit iOS' do
	platform :ios, '9.0'
	pod 'SKCore'
	pod 'SKClient'
	pod 'SKWebAPI'
	pod 'SKRTMAPI', :git => 'https://github.com/IntrepidPursuits/SKRTMAPI', :branch => 'cprime/reconnect'
	pod 'SKServer'
end

target 'SlackKit tvOS' do
	platform :tvos, '9.0'
	pod 'SKCore'
	pod 'SKClient'
	pod 'SKWebAPI'
	pod 'SKRTMAPI', :git => 'https://github.com/IntrepidPursuits/SKRTMAPI', :branch => 'cprime/reconnect'
	pod 'SKServer'
end
